/******************************************************************************

         1. Any integer is input by the user. Write a program to find out
         whether it is an odd number or even number.
         Code by Junaid Khan 

*******************************************************************************/

#include <iostream>

using namespace std;

int main()
{
    int a;
    cout <<"Enter any Number" <<endl;
    cin >> a;
    if (a%2==0){
        cout << "No. is Even" <<endl;
    }
    else{
        cout<< a <<" No. is Odd"<<endl; 
    }

    /* 
    Using Ternary Operator
    (a%2==0)? cout <<"No. is Even": cout <<"No. is odd";
    */
    return 0;
    
    
}
